@{
}

<h1>Partidos</h1>
<div>
    <h2>Partidos por jugar</h2>
    @foreach (Partido item in ViewBag.PartidosPorJugar)
    {
<div class="mt-4">
    <h3>@item.SeleccionA.Pais.Nombre vs @item.SeleccionB.Pais.Nombre</h3>
    <p>@item.FechaPartido.ToShortDateString()</p>
    <button class="btn-info"><a href="/Home/FinalizarPartido">Finalizar</a></button>
    <hr />
</div>

    }
</div>

<div>
    <h2>Partidos finalizados</h2>
    @foreach (Partido item in ViewBag.PartidosFinalizados)
    {
        <div class="mt-3">
            <p>@item.FechaPartido.ToShortDateString()</p>
            <p>@item.SeleccionA.Pais.Nombre vs @item.SeleccionB.Pais.Nombre</p>
        </div>

    }
</div>