@{
}


<h1>Selecciones</h1>
<div>
    @foreach (Seleccion item in ViewBag.Selecciones)
    {
    <div class="mt-3">
        <hr />
        <h2>@item.Pais.Nombre (@item.Pais.Alpha)</h2>
        <div class="d-flex row container-fluid justify-content-evenly">
            @foreach (Jugador jugador in item.Jugadores)
            {
            <p class="col-4">@jugador.NombreCompleto</p>
            }
        </div>
    </div>
        
    }
</div>