@using Microsoft.AspNetCore.Http
@using Dominio;


<h1>Hola @ViewBag.nombre!</h1>

@if (Context.Session.GetString("rol") == "OPERADOR")
{
    <div>
        <a href="/Partido/VerPartidos" class="btn btn-primary">Todos los partidos</a>
        <a href="/Partido/InfoPartidos" class="btn btn-primary">Información de partidos</a>
        <a href="/Home/VerPeriodistas" class="btn btn-primary">Periodistas</a>
        <a href="/Home/VerEstadisticas" class="btn btn-primary">Estadísticas</a>
    </div>
}


@if (Context.Session.GetString("rol") == "PERIODISTA")
{
    <div>
        <a  href="/Partido/VerPartidos" class="btn btn-primary" style="margin-right: 20px">Partidos finalizados</a>
        <a href="/Resenia/VerReseniasPersonales" class="btn btn-primary">Mis reseñas</a>
    </div>
}
